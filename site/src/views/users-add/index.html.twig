{% extends "layout.html.twig" %}

{% set pageName = 'users-add' %}

{% block content %}
  <ul class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Add new user</li>
  </ul>

  <div class="row top50">
    <div class="col-md-8 col-md-offset-2">
      <form class="form-horizontal" method="POST" action="?">
        <fieldset>
          <legend>Add new user</legend>

          {% if alert|default(false) %}
          <div class="alert alert-dismissible alert-{{ alert }}">
            {{ alert_message }}
          </div>
          {% endif %}

          <div class="form-group required">
            <label class="col-lg-3 control-label">Username</label>
            <div class="col-lg-9">
              <input required="true" type="text" class="form-control" name="username" placeholder="username">
            </div>
          </div>

          <div class="form-group required">
            <label class="col-lg-3 control-label">Phone number</label>
            <div class="col-lg-9">
              <input type="text" class="form-control" placeholder="phone" name="phone" maxlength="11" required="true">
            </div>
          </div>

          <div class="form-group">
            <label class="col-lg-3 control-label">Frist name</label>
            <div class="col-lg-9">
              <input type="text" class="form-control" placeholder="username" name="firstname">
            </div>
          </div>

          <div class="form-group">
            <label class="col-lg-3 control-label">Last name</label>
            <div class="col-lg-9">
              <input type="text" class="form-control" placeholder="username" name="lastname">
            </div>
          </div>

          <div class="form-group required">
            <label class="col-lg-3 control-label">Password</label>
            <div class="col-lg-9">
              <input type="password" class="form-control" placeholder="Password" name="password" required="true">
            </div>
          </div>

          <div class="form-group required">
            <label class="col-lg-3 control-label">Confirm password</label>
            <div class="col-lg-9">
              <input type="password" class="form-control" placeholder="Password" required="true">
            </div>
          </div>

          <div class="form-group">
            <label class="col-lg-3 control-label">Photo</label>
            <div class="col-lg-9">
              <span class="btn btn-default btn-file">
                  Browse <input type="file">
              </span>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <button type="reset" class="btn btn-default">Cancel</button>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
{% endblock %}