{% extends "layout.html.twig" %}

{% set pageName = 'landing' %}

{% block content %}
  <ul class="breadcrumb">
    <li class="active">Home</li>
  </ul>

  <ul class="nav nav-tabs">
    <li class="active"><a href="#catalog" data-toggle="tab" aria-expanded="true"><span class="glyphicon glyphicon-home"></span> Catalog</a></li>
    <li class="disabled"><a><span class="glyphicon glyphicon-user"></span> Users</a></li>
    <li class="disabled"><a>Orders</a></li>
    <li class=""><a href="#shopping-cart" data-toggle="tab" aria-expanded="false"><span class="glyphicon glyphicon-shopping-cart"></span> Shopping cart</a></li>
  </ul>
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="catalog">

      <br/>

      {% for aptekaRows in aptekas|batch(4, '') %}
        <div class="row">
          {% for apteka in aptekaRows %}
          {% if apteka %}
          <div class="col-md-3">
            <div class="panel panel-default">
              <div class="panel-heading">Apteka "{{ apteka.name }}"</div>
              <div class="panel-body">
                <img class="center-block" src="http://lorempixel.com/200/150/abstract/?{{ lipsum.word() }}">
                
                <p class="content top10">
                  {{ apteka.description }}
                </p>

              </div>
              <div class="panel-footer">
                <p class="content top10">
                  <span>Products <span class="badge">20</span></span>
                </p>
                <a href="/apteka/{{ apteka._id }}" class="btn btn-default"><span class="glyphicon glyphicon-th-list"> Details</a>
              </div>
            </div>
          </div>
          {% endif %}
          {% endfor %}
        </div>
      {% endfor %}

      <ul class="pagination">
        <li class="disabled"><a href="#">&laquo;</a></li>
        <li class="active"><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">&raquo;</a></li>
      </ul>
    </div>
    <div class="tab-pane fade" id="shopping-cart">
      {% include 'landing/tab-cart.html.twig' %}
    </div>
  </div>

{% endblock %}