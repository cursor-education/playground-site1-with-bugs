<form class="form-horizontal" method="POST" action="/login">

  <br/>

  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-5">
      
      <div class="form-group">
        <label class="col-lg-3 control-label">Address 1</label>
        <div class="col-lg-9">
          <input type="text" class="form-control" value="{{ pharmacy.address1 }}">
        </div>
      </div>

      <div class="form-group">
        <label class="col-lg-3 control-label">Address 2</label>
        <div class="col-lg-9">
          <input type="text" class="form-control" value="{{ pharmacy.address3 }}">
        </div>
      </div>

      <div class="form-group">
        <label class="col-lg-3 control-label">Address 3</label>
        <div class="col-lg-9">
          <input type="text" class="form-control" value="{{ pharmacy.address2 }}">
        </div>
      </div>

      <div class="form-group">
        <label class="col-lg-3 control-label">Address 4</label>
        <div class="col-lg-9">
          <input type="text" class="form-control" value="{{ pharmacy.address4 }}">
        </div>
      </div>

      <div class="form-group">
        <label class="col-lg-3 control-label">Country</label>
        <div class="col-lg-9">
          <input type="text" class="form-control" value="{{ pharmacy.country }}">
        </div>
      </div>

      <div class="form-group">
        <label class="col-lg-3 control-label">Description</label>
        <div class="col-lg-9">
          <textarea class="form-control">{{ pharmacy.description }}</textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-9 col-lg-offset-3">
          <button type="reset" class="btn btn-default">Cancel</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>

    </div>
    <div class="col-lg-5">
      <div class="form-group">
        <label class="col-lg-3 control-label">&nbsp;</label>
        <div class="col-lg-9">
          <img class="media-object" src="http://fakeimg.pl/100x100/" alt="...">
        </div>
      </div>

      <div class="form-group">
        <label class="col-lg-3 control-label">Phone 1</label>
        <div class="col-lg-9">
          <input type="text" class="form-control" value="{{ pharmacy.phone1 }}">
        </div>
      </div>

      <div class="form-group">
        <label class="col-lg-3 control-label">Phone 2</label>
        <div class="col-lg-9">
          <input type="text" class="form-control" value="{{ pharmacy.phone2 }}">
        </div>
      </div>
    </div>
    <div class="col-lg-1"></div>
  </div>

</form>