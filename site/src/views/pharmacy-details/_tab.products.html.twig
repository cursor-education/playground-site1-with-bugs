<form class="form-horizontal" method="POST" action="/login">

  <br/>

  <div class="row">
    <div class="col-lg-12">
      
      {% if not pharmacy.products|default([])|length %}

        {% include 'pharmacy-details/_tab.products.empty.html.twig' %}

      {% else %}

        {% for product in pharmacy.products|default([]) %}
        <div class="form-group">
          <label class="col-lg-2 control-label">{{ product.name }}</label>

          <div class="col-lg-6">
            {{ product.description }}
          </div>

          <div class="col-lg-1">
            <input disabled type="text" class="form-control" value="{{ product.count }}" />
          </div>

          <div class="col-lg-3">
            <a href="#" type="button" class="btn btn-default">
              <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Buy
            </a>

            <a href="/pharmacy/{{ pharmacy._id }}/products/{{ product.name }}/order" type="button" class="btn btn-default">
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Order
            </a>
          </div>
        </div>
        {% endfor %}

      {% endif %}

    </div>
  </div>

</form>