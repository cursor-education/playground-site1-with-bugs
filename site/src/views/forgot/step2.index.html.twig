{% extends "layout.html.twig" %}

{% set hideHeaderLeftMenu = true %}
{% set pageName = 'forgot-step2' %}

{% block content %}
  <ul class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Reset password</li>
  </ul>

  <div class="row top30">
    <div class="col-md-6 col-md-offset-3">
      <form class="form-horizontal" method="POST" action="?">
        <fieldset>
          <legend>Change password</legend>

          {% include '_alert.html.twig' %}

          <input type="hidden" name="username" value="{{ username }}" />

          <div class="form-group required">
            <label class="col-lg-4 control-label">Password</label>
            <div class="col-lg-8">
              <input type="password" class="form-control" placeholder="your new password here" name="password" required="true">
            </div>
          </div>

          <div class="form-group">
            <label class="col-lg-4 control-label">Confirm password</label>
            <div class="col-lg-8">
              <input type="password" class="form-control" placeholder="new password again" required="true">
            </div>
          </div>

          <div class="form-group top30">
            <label class="col-lg-4 control-label"></label>
            <div class="col-lg-8">
              <button type="submit" class="btn btn-default">Cancel</button>
              <button type="reset" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
{% endblock %}